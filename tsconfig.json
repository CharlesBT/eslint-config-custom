{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types"]
  },
  "ts-node": {
    // ts-node config
    "files": true,
    "esm": true // Tell ts-node CLI to install the --loader automatically, explained below
    // "experimentalResolver": true, // path mapping of TS is not yet supported in ts-node https://github.com/TypeStrong/ts-node/issues/1514,
  }
}
